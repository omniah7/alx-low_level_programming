CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

$(SRC:%.c) : $(OBJ:%.o)
	$(CC) $(CFLAGS) $@ -o $<

all : $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean :
	RM *~ $(NAME)

oclean :
	RM $(OBJ)

fclean :
	clean
	oclean

re :
	oclean
	all
